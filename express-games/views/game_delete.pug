extends layout 

block content 
    h1 #{title}: #{game.name} 

    if game_gameinstances.length 

        p #[strong Delete the following instances before attempting to delete this game.] 

        div(style='margin-left:20px;margin-top:20px')

            h4 Game Instances 

             dl 
            each gameinstance in game_gameinstances 
                dt 
                    a(href=gameinstance.url) #{gameinstance.title} 
                dd #{gameinstance.status}

    else 
        p Do you really want to delete this Game? 

        form(method='POST' action='') 
            div.form-group 
                input#gameid.form-control(type='hidden', name='gameid', required='true', value=game._id)

            button.btn.btn-primary(type='submit') Delete